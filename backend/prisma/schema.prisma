generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int          @id @default(autoincrement())
  name        String
  email       String       @unique
  createdAt   DateTime     @default(now())
  password    String
  friendOf    Friendship[] @relation("FriendOf")
  friendships Friendship[] @relation("UserFriendships")
  products    Product[]
  requests    Request[]    @relation("UserRequests")
  groups      Group[]      @relation("UserGroups")
}

model Friendship {
  id               Int              @id @default(autoincrement())
  userId           Int
  friendId         Int
  status           FriendshipStatus @default(PENDING)
  createdAt        DateTime         @default(now())
  friend           User             @relation("FriendOf", fields: [friendId], references: [id], onDelete: Cascade)
  user             User             @relation("UserFriendships", fields: [userId], references: [id], onDelete: Cascade)
  groupMemberships GroupMembership[]

  @@unique([userId, friendId])
  @@index([userId])
  @@index([friendId])
  @@index([status])
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]
}

model Product {
  id          Int            @id @default(autoincrement())
  ownerId     Int
  name        String
  categoryId  Int?
  expiresOn   DateTime
  isAvailable Boolean        @default(false)
  notes       String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  category    Category?      @relation(fields: [categoryId], references: [id])
  owner       User           @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  requests    Request[]
  groups      ProductGroup[]

  @@index([ownerId])
  @@index([categoryId])
  @@index([expiresOn])
  @@index([isAvailable])
}

model Request {
  id        Int           @id @default(autoincrement())
  productId Int
  claimerId Int
  status    RequestStatus @default(PENDING)
  createdAt DateTime      @default(now())
  claimer   User          @relation("UserRequests", fields: [claimerId], references: [id], onDelete: Cascade)
  product   Product       @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([productId, claimerId])
  @@index([status])
  @@index([claimerId])
}

model Group {
  id        Int               @id @default(autoincrement())
  name      String
  userId    Int
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  user      User              @relation("UserGroups", fields: [userId], references: [id], onDelete: Cascade)
  members   GroupMembership[]
  products  ProductGroup[]

  @@unique([userId, name])
  @@index([userId])
}

model GroupMembership {
  id           Int        @id @default(autoincrement())
  groupId      Int
  friendshipId Int
  createdAt    DateTime   @default(now())
  group        Group      @relation(fields: [groupId], references: [id], onDelete: Cascade)
  friendship   Friendship @relation(fields: [friendshipId], references: [id], onDelete: Cascade)

  @@unique([groupId, friendshipId])
  @@index([groupId])
  @@index([friendshipId])
}

model ProductGroup {
  id        Int      @id @default(autoincrement())
  productId Int
  groupId   Int
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([productId, groupId])
  @@index([productId])
  @@index([groupId])
}

model session {
  sid    String   @id @db.VarChar
  sess   Json     @db.Json
  expire DateTime @db.Timestamp(6)

  @@index([expire], map: "IDX_session_expire")
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

enum FriendshipStatus {
  PENDING
  ACCEPTED
  REJECTED
}
